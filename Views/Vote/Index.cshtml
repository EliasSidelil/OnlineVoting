@model IEnumerable<OnlineVoting.tbl_vote>

@{
    ViewBag.Title = "Vote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>You can manage Votes here...</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VoteDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_candidate.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_events.EventTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_voter.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VoteDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_candidate.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_events.EventTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_voter.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VoteID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VoteID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VoteID })
        </td>
    </tr>
}

</table>
